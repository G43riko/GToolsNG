{
    "extends": "../../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "gt",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "gt",
            "kebab-case"
        ],
        "paths": {
            "@gt-common": [
                "../../dist/gt-common"
            ],
            "@gt-common/*": [
                "../../dist/gt-common/*"
            ]
        }
    }
}

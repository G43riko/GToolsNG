{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "module": "es2015",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "@gt/menu": [
                "projects/menu/src/projects"
            ],
            "@gt/menu/*": [
                "projects/menu/src/*"
            ],
            "@gt/table": [
                "projects/table/src/projects"
            ],
            "@gt/table/*": [
                "projects/table/src/*"
            ],
            "@gt/common": [
                "projects/common/src/projects"
            ],
            "@gt/common/*": [
                "projects/common/src/*"
            ],
            "@gt/input": [
                "projects/input"
            ],
            "@gt/input/*": [
                "projects/input/*"
            ]
        }
    },
    "angularCompilerOptions": {
        "enableIvy": false
    }
}
